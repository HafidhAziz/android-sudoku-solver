<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sudokusolver" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/blue_soft</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:height">44dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ButtonOrange" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_orange_with_radius_5</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ButtonGreen" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_green_with_radius_5</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
</resources>